#!/usr/bin/python3

import sys
from os.path import basename

TreasuryTagMap = {}
for w in open('categories/treasury.txt', 'r').readlines():
    k, t = w.strip().split('\t')
    TreasuryTagMap[k] = t

for f in sys.argv[1:]:

    fin = open(f, 'r')
    fout = open("tmp/" + basename(f), "w")

    # skip non-tags
    x = fin.readline()
    while x:

        # output new
        fout.write(x)

        if x.strip() == 'Tags:':
            x = None
        else:
            x = fin.readline()

    # Tags
    x = fin.readline()
    while x:

        split = x.split()
        if x[0] != ' ' or len(split)< 2:
            fout.write(x)
            x = None

        else:
            tag = split[1]

            if tag in TreasuryTagMap:
                fout.write("  - %s\n" % (TreasuryTagMap[tag]))
            else:
                fout.write(x)
    
            x = fin.readline()

    # finish
    for x in fin.readlines():
        fout.write(x)
        # output new

