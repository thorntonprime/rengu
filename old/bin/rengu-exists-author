#!/usr/bin/python3

import sys

sys.path.append('')

from rengu.tools import is_uuid
from rengu.author import Author

from blitzdb.document import DoesNotExist

for n in sys.stdin.readlines():

    n = n.strip()

    if is_uuid(n):
        try:
            a = Author.fetch(n)
            print(n, "=", a.get("pk"))
            sys.stdout.flush()

        except DoesNotExist:
            print(n, "! NOT FOUND")
            sys.stdout.flush()

    else:
        count = 0
        try:
            for a in Author.find(n):
                print(n, "~", a.get("pk"), a.get("Name"))
                sys.stdout.flush()
                count += 1

        except:
            print(n, "! ERROR", e)
            sys.exit()

        if count == 0:
            print(n, "! NO MATCH")
            sys.stdout.flush()
        elif count > 1:
            print(n, "! MATCH COUNT", count, "> 1")
            sys.stdout.flush()
