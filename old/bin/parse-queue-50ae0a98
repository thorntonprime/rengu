#!/bin/env python3

import re
import textwrap
from word2number import w2n

TEMPLATE="""---
Source:
  Title: The Complete Works of Chuang Tzu
  ID: 50ae0a98-5702-40cb-8c11-4c6297aa457a
  Translator: Burton Watson
By: Zhuangzi
Locus:
  Chapter: {0}
  Paragraph: {1}
Title: {2}
---
{3}
"""

def write_body(chapter, paragraph, title, body):

    fout = open("tmp/verses/" + str(chapter) + "-" + str(paragraph), "w")

    if body[0] in [ '"' ]:
        body = "\\" + body

    body = body.strip()

    fout.write(TEMPLATE.format( chapter, paragraph, title, body))
    fout.close()


####

fin = open("queue/chuangtzu-burton-2.txt", "r")

chapter = None
paragraph = 1
title = None
body = ""

for l in fin.readlines():
    x = l.strip()

    m_chap = re.match("^Section ([A-Z ]+?) - (.+)$", x)

    if m_chap and len(body.strip()) > 1:
        write_body( str(chapter), str(paragraph), title, body.strip() )

    if m_chap:
        print(x)
        chapter = w2n.word_to_num(m_chap.group(1))
        title = ' '.join( [ w.capitalize() for w in m_chap.group(2).split() ] )
        title = re.sub("[\.0-9]", "", title)
        paragraph = 1 

    elif len(x.strip()) < 1 and len(body.strip()) > 1:
        write_body( str(chapter), str(paragraph), title, body.strip() )
        paragraph += 1
        body = ""

    else:
        fixed_body = x.strip()
        fixed_body = fixed_body.replace(":", "ï¼š")
        fixed_body = re.sub("[0-9]", "", fixed_body)
        fixed_body = re.sub(u"[\u00bf-\uffff]", '', fixed_body)
        body += textwrap.fill(fixed_body, 75, subsequent_indent=' ') + "\n"

if len(body.strip()) > 1:
    write_body( str(chapter), str(paragraph), title, body.strip() )

