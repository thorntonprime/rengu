#!/usr/bin/python3

import sys

sys.path.append('')

from rengu.tools import is_uuid
from rengu.source import Source

from blitzdb.document import DoesNotExist

for n in sys.stdin.readlines():

    n = n.strip()

    if is_uuid(n):
        try:
            s = Source.fetch(n)
            print(n, "=", s.get("pk"))
            sys.stdout.flush()

        except DoesNotExist:
            print(n, "! NOT FOUND")
            sys.stdout.flush()

    else:
        count = 0
        try:
            for s in Source.find(n):
                print(n, "~", s.get("pk"), s.get("Title"))
                sys.stdout.flush()
                count += 1

        except:
            print(n, "! ERROR", e)
            sys.exit()

        if count == 0:
            print(n, "! NO MATCH")
            sys.stdout.flush()
        elif count > 1:
            print(n, "! MATCH COUNT", count, "> 1")
            sys.stdout.flush()


