#!/usr/bin/python3


import sys
import re

X = "Source:\n\s+Title: Collection of Stone and Sand\n"

Y = "Source:\n  ID: 0d714158-c6fb-4950-9b66-ed3beaebe15e\nLocation:\n"

for f in sys.argv[1:]:

  fin = open(f, 'r')
  d = fin.read()
  fin.close()

  n = re.sub(X, Y, d, flags=re.DOTALL | re.MULTILINE)

  fout = open(f, 'w')
  fout.write(n)
  fout.close()

