#!/usr/bin/python3


import sys
import re

X = "Source:\n\s+Title: A Year with Rumi.*Publisher: HarperOne\n"

Y = "Source:\n  ID: 0a254615-569b-4fb3-96ef-69bd8a224d0d\n"

for f in sys.argv[1:]:

  fin = open(f, 'r')
  d = fin.read()
  fin.close()

  n = re.sub(X, Y, d, flags=re.DOTALL | re.MULTILINE)

  fout = open(f, 'w')
  fout.write(n)
  fout.close()

