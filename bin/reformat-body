#!/bin/sh

cat | \
  sed -e 's/[——-]$/_/g' | \
  sed -e '1h;2,$H;$!d;g' -e 's/\n\n/\n¶\n/g' | \
  tr '\n' ' ' | \
  sed -e 's/  */ /g' | \
  sed -e 's/  *\. *\. *\. */ ... /g' | \
  sed -e 's/…/ .../g' | \
  sed -e 's/\([,;:\.]\) *\. *\. *\. */\1 ... /g' | \
  sed -e 's/\([”",;:\.]\)\([a-zA-Z]\)/\1 \2/g' | \
  sed -e 's/\([^\.]\)\.  *\([a-z]\)/\1, \2/g' | \
  sed -e 's/\([A-Za-z\.,;:-]\)  *\([A-Za-z-]\)/\1 \2/g' | \
  sed -e 's/\([a-z]\)[-—]  */\1 -- /g' | \
  sed -e 's/  *o  *f  */ of /g' | \
  sed -e 's/:/：/g' | \
  sed -e 's/[——-]/-/g' | \
  sed -s 's@\_ *@@g' | \
  sed -e 's/ *$//g' | \
  sed -e 's/  */ /g' | \
  sed -e 's/¶/\n\n/g' | \
  fmt -w 78 | \
  sed -e 's/^ //g'
